nav.navbar.navbar-inverse(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='home') Recruitr
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li(ng-if='activeUser.role > -1'): a(ui-sref='profiles.list'): i.fa.fa-list &nbsp; Profiles
        li(ng-if='activeUser.role === 10'): a(ui-sref='profiles.new'): i.fa.fa-photo &nbsp; New Profile
        li(ng-if='activeUser.role === 10'): a(ui-sref='users.list'): i.fa.fa-users &nbsp; Users
        li(ng-if='activeUser.role === 10'): a(ui-sref='users.new'): i.fa.fa-user &nbsp; New User
        li: button.btn.btn-default#logoutButton(ng-click='logout()'): i.fa.fa-sign-out &nbsp; {{activeUser.firstName}} {{activeUser.lastName}}
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
